<style>
/* Footer untuk tombol */
.foot {
    background-color: #000000;
    color: #50C878;
    padding: 10px;
    border-radius: 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 10px; /* Beri jarak antar tombol */
}

.foot .cancel,
.foot .confirm {
    flex: 1; /* Membuat tombol memiliki ukuran proporsional */
    text-align: center;
    padding: 12px 15px;
    border-radius: 5px;
    font-weight: bold;
    cursor: pointer;
}

.foot .cancel {
    background-color: #222;
    color: #50C878;
    box-shadow: 0px 0px 10px rgba(80, 200, 120, 0.7);
}

.foot .confirm {
    background-color: #50C878;
    color: #000;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 5px;
}

.foot .confirm .result {
    background-color: #121212;
    padding: 5px 15px;
    border-radius: 10px;
    font-weight: bold;
    color: #50C878;
}

/* Pastikan elemen utama tidak tertutup */
.pop-total {
    max-width: 90%; /* Supaya tidak terlalu kecil di layar besar */
    left: auto;
    bottom: 10px; /* Pastikan tidak terlalu mepet */
    box-shadow: rgba(80, 200, 120, 0.4) 0px -10px 20px 0px;
    z-index: 2004;
    transform: translateY(0);
    transition: transform .5s;
}

/* Box Amount */
.amount-box, .multiple-box {
    background-color: #121212;
    padding: 13px;
    border-radius: 8px;
    display: flex;
    gap: 5px;
}

/* Box jumlah total */
.result {
    background-color: #50C878;
    padding: 5px 15px;
    border-radius: 8px;
    font-weight: bold;
    font-size: 14px;
    color: #000;
}

/* Responsive */
@media (max-width: 600px) {
    .foot {
        flex-direction: row;
        padding: 6px;
    }

    .foot .cancel, .foot .confirm {
        font-size: 12px;
        padding: 6px 12px;
    }

    .result {
        padding: 4px 10px;
        font-size: 12px;
    }
}
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const cancelButton = document.querySelector(".cancel");
        const popTotal = document.querySelector(".pop-total");

        if (cancelButton) {
            cancelButton.addEventListener("click", function () {
                popTotal.style.transform = "translateY(400px)"; // Menutup popup dengan animasi
                setTimeout(() => {
                    popTotal.style.display = "none"; // Sembunyikan setelah animasi
                }, 500);
            });
        }
    });
</script>
